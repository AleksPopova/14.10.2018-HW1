/*Напишите программу, находящую корни уравнения 2018X+2019Y=78487894
эффективным перебором. В комментариях напишите, почему перебор - эффективный
*/

#include <iostream>
using namespace std;
int main()
{
     int a;
    for (int b = 1; b < 38875; b++)
    {
        if ((78487894 - (2019 * b)) % 2018 == 0)
        {
            a = (78487894 - (2019 * b)) / 2018;
            cout << "b = " << b << " a = " << a << "\n";
        }
    }
    return 0;
}
